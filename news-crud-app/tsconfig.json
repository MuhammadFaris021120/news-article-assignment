{
  "compilerOptions": {
    "target": "es2016",                           
    "module": "commonjs",                         
    "moduleResolution": "node",                    
    "jsx": "react-jsx",                           
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                
    "skipLibCheck": true,                         
    "resolveJsonModule": true,                    
    "noEmit": true,                               
    "isolatedModules": true                        
  },
  "include": ["src"]                              
}
